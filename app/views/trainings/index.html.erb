<%= render "shared/header" %>

<div class='main'>
  <%#左側メニュー%>
  <div class='left-contents'>
    <div class='note-name' id="note-name">
      <% if current_user %>
        <%= current_user.name %>さんの投稿メニュー
      <% end %>
    </div>
    <div class='training-menu'>
      <ul id="training">
        <% @trainings.each do |training| %>
          <li>
            <%= training.title %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class='left-bottom'>
      <div class='user-new'>
        <% if current_user.nil? %>
          <div class="user-new-title">新規登録はこちらから</div>
          <%= form_with model: @user, url: users_path, local: true do |f| %>
          <div>
            <%= f.label :個人名orチーム名 %>
            <%= f.text_field :name, class:"field" %>
          </div>
          <div>
            <%= f.label :パスワード　　　 %>
            <%= f.password_field :password, class:"field" %>
          </div>
          <div>
            <%= f.label :パスワード再入力 %>
            <%= f.password_field :password_confirmation, class:"field" %>
          </div>
          <div>
            <%= f.label :年齢 %>
            <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"category-box", id:"user-age"}) %>
            <%= f.label :性別 %>
            <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"category-box", id:"user-sex"}) %>
          </div>
          <div>
            <%= f.submit "新規登録", class:"post" %>
          </div>
          <% end %>
        <% end %>
      </div>
      <div class='user-login'>
        <% if current_user.nil? %>
          <div class="user-new-title">ログインはこちらから</div>
          <%= form_with model: @user, url: login_path, local: true do |f| %>
          <div>
            <%= f.label :個人名orチーム名 %>
            <%= f.text_field :name, class:"field" %>
          </div>
          <div>
            <%= f.label :パスワード　　　 %>
            <%= f.password_field :password, class:"field" %>
          </div>
          <div>
            <%= f.submit "ログイン", class:"post" %>
          </div>
          <% end %>
        <% else %>
          <div class="user-new-title">別ユーザーでログイン</div>
          <%= form_with model: @user, url: login_path, local: true do |f| %>
          <div>
            <%= f.label :個人名orチーム名 %>
            <%= f.text_field :name, class:"field" %>
          </div>
          <div>
            <%= f.label :パスワード　　　 %>
            <%= f.password_field :password, class:"field" %>
          </div>
          <div>
            <%= f.submit "ログイン", class:"post" %>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <%#/左側メニュー%>

  <%#中央メイン%>
  <div class='center-contents'>
    <%#中央メイン上部%>
    <div class='training-content'>
      <div class='training1'>
        <div class='training1-left'>
          <div id='selected-title'>
            選択されたタイトル表示
          </div>
          <div id='selected-time'>
            選択された所用時間表示
          </div>
          <div id='selected-persons'>
            選択された必要人数表示
          </div>
          <div id='selected-fatigue'>
            選択された疲労度表示
          </div>
        </div>
        <div class='training1'>
          <div id='selected-content'>
            選択されたコンテンツ表示
          </div>
        </div>
      </div>
      <ul id="training-all">
        <% @trainings.each do |training| %>
          <li>
            <input type="hidden", value="<%= training.title %>">
            <input type="hidden", value="<%= training.time %>">
            <input type="hidden", value="<%= training.persons %>">
            <input type="hidden", value="<%= training.fatigue.name %>">
            <input type="hidden", value="<%= training.content %>">
          </li>
        <% end %>
      </ul>
    </div>
    <%#中央メイン上部%>
    <%#中央メイン下部%>
    <div class='training-post'>
      <% if current_user %>
        <div class='training-post-left'>
          <%= form_with model: @training, url: trainings_path, local: true do |f| %>
          <div class='training-title'>
            <%= f.label :タイトル %>
            <%= f.text_field :title, class:"field" %>
          </div>
          <div class='training-time'>
            <%= f.label :所用時間 %>
            <%= f.text_field :time, class:"mini-field" %>分
          </div>
          <div class='training-persons'>
            <%= f.label :必要人数 %>
            <%= f.text_field :persons, class:"mini-field" %>人
          </div>
          <div>
            <%= f.label :疲労度 %>
            <%= f.collection_select(:fatigue_id, Fatigue.all, :id, :name, {}, {class:"category-box", id:"training-fatigue"}) %>
          </div>
        </div>
        <div class='training-post-center'>
          <%= f.label :詳細 %><br>
          <%= f.text_area :content, class:"text" %>
          <div class="post-button">
            <%= f.submit "投稿する", class:"post" %>
          </div>
        </div>

        <%# <div class='training-post-right'> %>
        <%# </div> %>

        <% end %>
      <% end %>
    </div>
    <%#/中央メイン下部%>
  </div>
  <%#/中央メイン%>
</div>

<%= render "shared/footer" %>